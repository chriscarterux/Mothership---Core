{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Mothership Config Schema (Matrix)",
  "type": "object",
  "required": ["version", "state", "commands"],
  "properties": {
    "version": { "const": "matrix" },
    "state": {
      "type": "string",
      "enum": ["linear", "local"]
    },
    "linear": {
      "type": "object",
      "properties": {
        "team": { "type": "string", "minLength": 1 },
        "workspace": { "type": "string" }
      },
      "required": ["team"]
    },
    "local": {
      "type": "object",
      "properties": {
        "stories_file": { "type": "string" }
      }
    },
    "governance": {
      "type": "object",
      "properties": {
        "require_approval": { "type": "boolean" },
        "approval_chain": { "type": "array", "items": { "type": "string" } },
        "approval_timeout_hours": { "type": "integer", "minimum": 1 },
        "auto_escalate_blocked": { "type": "boolean" }
      }
    },
    "deployment": {
      "type": "object",
      "properties": {
        "strategy": { "enum": ["blue-green", "canary", "rolling"] },
        "services": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "health_endpoint", "deploy_order"],
            "properties": {
              "name": { "type": "string" },
              "health_endpoint": { "type": "string" },
              "deploy_order": { "type": "integer" },
              "dependencies": { "type": "array", "items": { "type": "string" } }
            }
          }
        },
        "canary_percentage": { "type": "integer", "minimum": 1, "maximum": 100 },
        "canary_duration_minutes": { "type": "integer", "minimum": 1 },
        "rollback_on_error_rate_above": { "type": "number", "minimum": 0 }
      }
    },
    "teams": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["members"],
        "properties": {
          "members": { "type": "array", "items": { "type": "string" } },
          "approval_required": { "type": "boolean" },
          "max_stories": { "type": "integer", "minimum": 1 }
        }
      }
    },
    "security": {
      "type": "object",
      "properties": {
        "scan_secrets": { "type": "boolean" },
        "block_hardcoded_keys": { "type": "boolean" },
        "rotate_on_deploy": { "type": "boolean" },
        "secret_patterns": { "type": "array", "items": { "type": "string" } }
      }
    },
    "audit": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "log_file": { "type": "string" },
        "retention_days": { "type": "integer", "minimum": 1 }
      }
    },
    "commands": {
      "type": "object",
      "required": ["typecheck", "lint", "test", "build"],
      "properties": {
        "typecheck": { "type": "string" },
        "lint": { "type": "string" },
        "test": { "type": "string" },
        "build": { "type": "string" },
        "security_scan": { "type": "string" }
      }
    },
    "branch_prefix": { "type": "string" }
  },
  "if": { "properties": { "state": { "const": "linear" } } },
  "then": { "required": ["linear"] }
}
