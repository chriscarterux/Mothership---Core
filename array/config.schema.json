{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Mothership Config Schema (Array)",
  "type": "object",
  "required": ["state", "commands"],
  "properties": {
    "state": {
      "type": "string",
      "enum": ["linear", "local"],
      "description": "Story backend: linear (API) or local (stories.json)"
    },
    "linear": {
      "type": "object",
      "properties": {
        "team": { "type": "string", "minLength": 1 }
      },
      "required": ["team"]
    },
    "local": {
      "type": "object",
      "properties": {
        "stories_file": { "type": "string", "default": "stories.json" }
      }
    },
    "commands": {
      "type": "object",
      "required": ["typecheck", "lint", "test", "build"],
      "properties": {
        "typecheck": { "type": "string" },
        "lint": { "type": "string" },
        "test": { "type": "string" },
        "build": { "type": "string" }
      }
    },
    "branch_prefix": {
      "type": "string",
      "default": "feat"
    }
  },
  "if": { "properties": { "state": { "const": "linear" } } },
  "then": { "required": ["linear"] }
}
